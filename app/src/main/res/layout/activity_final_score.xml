<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FinalScoreActivity">

    <TextView
        android:id="@+id/textViewPlayerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Joueur :"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/textViewFinalScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewPlayerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Score Final :"
        android:textSize="18sp"/>

    <Button
        android:id="@+id/buttonReturnToThemes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textViewFinalScore"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:text="Retour à la liste des thèmes"/>

</RelativeLayout>
